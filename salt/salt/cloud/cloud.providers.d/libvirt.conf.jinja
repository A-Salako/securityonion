{%- for node_type, hosts in HYPERVISORS.items() %}
{%-   for host in hosts %}

kvm-ssh-{{host}}:
  driver: libvirt
  url: qemu+ssh://soqemussh@{{host}}/system?socket=/var/run/libvirt/libvirt-sock

{%-   endfor %}
{%- endfor %}

